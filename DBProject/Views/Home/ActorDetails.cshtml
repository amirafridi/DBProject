@model DBProject.Models.Actor
@{
    ViewBag.Title = "ActorDetails";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <h2>@Model.Name</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <p>Gender: @Model.Gender</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <p>Actor Rating: @Model.Rating</p>
        </div>
    </div>
    <div class="row">
        <a href="/Home/AddMovieToActor?actor=@Model.Name">Add Movie that @Model.Name  acted in</a>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3>Movies @Model.Name  has acted in:</h3>
            </div>
        </div>
        <div class="row header-row">
            <div class="col-md-4">
                <h3>Movie</h3>
            </div>
            <div class="col-md-4">
                <h3>Character Name</h3>
            </div>
            <div class="col-md-4">
                <h3>Pay</h3>
            </div>
        </div>
        @foreach (var mov in Model.Movies)
        {
            <div class="row ">
                <div class="col-md-4">
                    <a href="/Home/MovieDetails?movie=@mov.Movie">@mov.Movie</a>
                </div>
                <div class="col-md-4">
                    <p>@mov.CharName</p>
                </div>
                <div class="col-md-4">
                    <p>$@mov.Pay</p>
                </div>
            </div>
        }
    </div>


</div>


