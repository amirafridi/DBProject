
@{
    ViewBag.Title = "Producers";
}

<h2>Producers</h2>
<p>@Html.ActionLink("Add New Producer", "AddProducer", "Home")</p>
<div class="table-container container">

    <div class="row header-row">
        <div class="col-md-4 col-md-offset-2">
            <a href="/Home/Producers?sortby=Name"><h3>Name</h3></a>
        </div>
        <div class="col-md-2">
            <a href="/Home/Producers?sortby=Gender"><h3>Gender</h3></a>
        </div>
        <div class="col-md-2">
            <a href="/Home/Producers?sortby=Rating"><h3>Rating</h3></a>
        </div>
    </div>
    @{string rowNumber = "odd";}
    @foreach (var prod in Model)
    {
        <div class="row actor-row @rowNumber">
            <div class="col-md-4 col-md-offset-2">
                <a href="/Home/ProducerDetails?producer=@prod.Name">@prod.Name</a>
            </div>
            <div class="col-md-2">
                <p>@prod.Gender</p>
            </div>
            <div class="col-md-2">
                <p>@prod.Rating</p>
            </div>
        </div>
        {
            rowNumber = rowNumber == "odd" ? "even" : "odd";

        }
    }
</div>
