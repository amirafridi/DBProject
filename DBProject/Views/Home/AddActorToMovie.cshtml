@model DBProject.Models.ActedIn
@{
    ViewBag.Title = "AddActorToMovie";
}

<h2>Add Actor to @Model.Movie</h2>

@using (Html.BeginForm("AddActorToMovieConfirmation", "Home", FormMethod.Post, new { @onsubmit = "return addActedInValidation();" }))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                @Html.LabelFor(m => m.Movie)
            </div>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Movie, new { @readonly = "", @id = "movieField" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                @Html.LabelFor(m => m.Actor)
            </div>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Actor, new { @id = "actorField" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                @Html.LabelFor(m => m.CharName)
            </div>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.CharName, new { @id = "charField" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                @Html.LabelFor(m => m.Pay)
            </div>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Pay, new { @id = "payField" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <input type="submit" value="ADD ACTOR" />
            </div>
        </div>
    </div>
}