@model DBProject.Models.Producer

@{
    ViewBag.Title = "AddProducer";
}
<h2>Add Producer</h2>
@using (Html.BeginForm("AddProducerConfirmation", "Home", FormMethod.Post, new { @onsubmit = "return addPersonValidation();" }))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                @Html.LabelFor(m => m.Name)
            </div>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Name, new { @id = "nameField" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                @Html.LabelFor(m => m.Gender)
            </div>
            <div class="col-sm-8">
                @Html.RadioButtonFor(m => m.Gender, "Male", new { @id = "m" })
                @Html.Label("Male")
                @Html.RadioButtonFor(m => m.Gender, "Female", new { @id = "f" })
                @Html.Label("Female")
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                @Html.LabelFor(m => m.Rating)
            </div>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Rating, new { @id = "ratingField" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <input type="submit" value="ADD PRODUCER" />
            </div>
        </div>
    </div>
}