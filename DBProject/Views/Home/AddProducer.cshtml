@model DBProject.Models.Producer

@{
    ViewBag.Title = "AddActor";
}
<h2>Add Actor</h2>
@using (Html.BeginForm("AddProducerConfirmation", "Home", FormMethod.Post, new { @onsubmit = "return addProducerValidation();" }))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                @Html.LabelFor(m => m.Name)
            </div>
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.Name)
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <input type="submit" value="ADD ACTOR" />
            </div>
        </div>
    </div>
}